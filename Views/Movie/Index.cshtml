@model IEnumerable<IdentityMovie.Models.ViewModel.SpMovie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Movies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Years)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-end">CRUD ACTIONS</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Years)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-end">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-info" asp-action="Update" asp-route-id="@item.MovieId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MovieId">Delete</a>
                        @* <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button> *@
                    }
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.MovieId">Details</a>
                   
                </td>
            </tr>
            
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
        // When the modal is shown
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Button that triggered the modal
            movieId = button.data('movie-id'); // Extract the movie ID from data-movie-id
        });

        // When the delete button in the modal is clicked
        $('#confirmDeleteButton').click(function () {
            // Close the modal
            $('#deleteModal').modal('hide');
        });

    });

   

</script>
